<SettingsScene@Screen>:
    name: 'settingsscene'
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'
        Label:
            text: 'SETTINGS'
            size: 400, 120
            size_hint: None, None
            font_name: 'hexagon_cup.ttf'
            font_size: 65
            color: .1, 1, .8, 1

    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'
        Label:
            text: '_                      _'
            size: 400, 110
            size_hint: None, None
            font_name: 'hexgon.ttf'
            font_size: 60
            color: .1, 1, .8, 1

    BoxLayout:
        orientation: 'vertical'
        pos_hint: {'center_y' : .8}
        Button:
            text: 'BACK'
            size: 200, 50
            size_hint: None, None
            pos_hint: {'center_x' : .5}
            font_name: 'CaviarDreams.ttf'
            font_size: 30
            color: .1, 1, .8, 1
            background_color: .1, .1, .1, 1
            on_press: 
                self.color = (1, .7, .1, 1)
            on_release: 
                app.root.current = 'menuscene'